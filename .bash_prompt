# @gf3’s Sexy Bash Prompt, inspired by “Extravagant Zsh Prompt”
# Shamelessly copied from https://github.com/gf3/dotfiles
# Screenshot: http://i.imgur.com/s0Blh.png

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		RED=$(tput setaf 160)
		MAGENTA=$(tput setaf 164)
		ORANGE=$(tput setaf 172)
		GREEN=$(tput setaf 28)
		PURPLE=$(tput setaf 135)
		WHITE=$(tput setaf 256)
		GREY=$(tput setaf 237)
	else
		RED=$(tput setaf 9)
		MAGENTA=$(tput setaf 13)
		ORANGE=$(tput setaf 11)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 5)
		WHITE=$(tput setaf 15)
		GREY=$(tput setaf 8)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	RED="\033[0;31]m"
	MAGENTA="\033[1;35m"
	ORANGE="\033[0;33m"
	GREEN="\033[0;32m"
	PURPLE="\033[0;35m"
	WHITE="\033[1;37m"
	GREY="\033[1;30m"
	BOLD=""
	RESET="\033[m"
fi

export MAGENTA
export ORANGE
export GREEN
export PURPLE
export WHITE
export BOLD
export RESET

function parse_git_dirty() {
	[[ $(git status 2> /dev/null | tail -n1) != "nothing to commit (working directory clean)" ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

#PS1="\[$GREEN\]\h:\W \u\$ \[$RESET\]";
export PS1="\[${BOLD}${RED}\]\u \[${RESET}${WHITE}\]at \[${BOLD}${ORANGE}\]\h \[${RESET}${WHITE}\]in \[${BOLD}${GREEN}\]\w\[${RESET}${WHITE}\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")\[${BOLD}${PURPLE}\]\$(parse_git_branch)\[${RESET}${GREY}\]\n\$ \[$RESET\]"
export PS2="\[$ORANGE\]→ \[$RESET\]"

